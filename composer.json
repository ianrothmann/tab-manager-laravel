{
    "name": "eawardie/tab-manager-laravel",
    "description": "This is a Laravel package used to manage browser tab specific session data",
    "keywords": [
        "EA-Wardie",
        "laravel",
        "tab-manager-laravel"
    ],
    "homepage": "https://github.com/EA-Wardie/tab-manager-laravel-php8",
    "license": "MIT",
    "authors": [
        {
            "name": "Wardie van Tonder",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0.2",
        "inertiajs/inertia-laravel": "^0.6.4",
        "spatie/laravel-package-tools": "^1.9.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.13",
        "nunomaduro/collision": "^6.4.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Eawardie\\TabManager\\": "src",
            "Eawardie\\TabManager\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Eawardie\\TabManager\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Eawardie\\TabManager\\ServiceProviders\\TabManagerServiceProvider"
            ],
            "aliases": {
                "TabManager": "Eawardie\\TabManager\\Facades\\TabManager"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
